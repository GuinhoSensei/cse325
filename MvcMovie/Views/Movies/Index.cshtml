@model MvcMovie.Models.MovieGenreViewModel

<h1>Movies</h1>

<form asp-controller="Movies" asp-action="Index" method="get" class="filter-bar">
    <div class="filters">
        <label>
            Genre
            <select asp-for="MovieGenre" asp-items="Model.Genres">
                <option value="">All</option>
            </select>
        </label>

        <label>
            Title
            <input asp-for="SearchString" />
        </label>

        <!-- NEW: Year-or-newer dropdown -->
        <label>
            Year (or newer)
            <select asp-for="MinYear" asp-items="Model.Years">
                <option value="">All</option>
            </select>
        </label>

        <button type="submit">Filter</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies!)
{
        <tr>
            <td>@item.Title</td>
            <td>@item.ReleaseDate.ToString("yyyy-MM-dd")</td>
            <td>@item.Genre</td>
            <td>@item.Price.ToString("C")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
